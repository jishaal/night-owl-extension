{
  "short_name": "Night Owl",
  "name": "Night Owl Extension",
  "version": "0.0.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Night Owl"
  },
  "background": {
    "scripts": ["./static/js/browser-polyfill.min.js", "./static/js/background.js"],
    "persistent": false
  },
  "icons": {
		"128": "icon.png"
	},
  "permissions": [
    "tabs",
    "cookies",
    "geolocation",
    "storage",
    "*://*.twitter.com/*"
  ]
}
