{
	"short_name": "Night Owl",
	"name": "Night Owl",
	"version": "1.0.3",
	"manifest_version": 2,
	"description":
		"An extension to save your eyes! Automatically make Twitter's night mode turn on and off at sunset and sunrise.",
	"browser_action": {
		"default_popup": "index.html",
		"default_title": "Night Owl"
	},
	"background": {
		"scripts": ["./static/js/browser-polyfill.min.js", "./static/js/background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": ["*://*.reddit.com/*"],
			"js": ["./static/js/browser-polyfill.min.js", "./static/js/content.js"]
		}
	],
	"icons": {
		"128": "icon_128x128.png",
		"64": "icon_64x64.png",
		"32": "icon_32x32.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"cookies",
		"geolocation",
		"storage",
    "*://*.twitter.com/*",
    "*://*.reddit.com/*"
	]
}
